@model ReciclaMais.Models.Noticia

@{
    ViewData["Title"] = "Delete";
}

<h1>Apagar uma notícia</h1>

<h3>Tem certeza que deseja remover a notícia?</h3>
<div>
    <h4>Notícia</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Imagem)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Imagem)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Titulo)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Titulo)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Resumo)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Resumo)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.TextoConteudo)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TextoConteudo)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DataPublicacao)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DataPublicacao)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <a class="btn btn-info" asp-action="Index">Voltar</a> |
        <input type="submit" value="Apagar" class="btn btn-danger" /> 
        
    </form>
</div>

